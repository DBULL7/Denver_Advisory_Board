extends ./layout 
append head
  title Admin | DAB 
  link(rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0-alpha.4/css/materialize.min.css")
block content
  .container
    .row
      .col.s-8.offset-s2.md-10.offset-md-2.l8.offset-l2
        form(class="form-signin")
          h2(class="form-signin-heading center") Please Sign In
          input( id="email" class="form-control" placeholder="Email" autofocus autocomplete="off")
          input( type="password" id="password" class="form-control" placeholder="Password" autocomplete="off")
          button(class="btn btn-lg btn-primary btn-block" type="button" id="login") Login

  script(async, src="adminLogin.bundle.js")